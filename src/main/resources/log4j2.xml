<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{YYYY/MM/dd HH:mm:ss.SSS} | %-5level | %t | %l | %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="console"/>
        </Root>
        <Logger name="org.willclark" level="DEBUG"></Logger>
    </Loggers>
</Configuration>